<!DOCTYPE html>
<html>
	<head>
		<title>MyApp</title>
		
		<% if alert %>
			<div class="alert alert-danger" role="alert"><%= alert %></div>
		<% end %>
		
		<% if notice %> 
		  <div class="alert alert-info" role="alert"><%= notice %></div> 
		<% end %>

		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

		<meta name="viewport" content="width=device-width, initial-scale=1"> 
		<%= csrf_meta_tags %>
	</head>

	<body>
		<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<!-- Navbar -->
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<div class="companyLogo navbar-brand">
						<%=link_to "Kelly Inc.", "/static_pages/index" %>
					</div> <!--end weddingWebsite -->
				</div> <!--end navbar-header -->
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><%=link_to "Home", "/static_pages/index" %></li>
						<li><%=link_to "About", "/static_pages/about" %></li>
						<li><%=link_to "Products", "/products" %></li>
						<li><%=link_to "Contact", "/static_pages/contact" %></li>
						<li> 
							<% if user_signed_in? %> 
								<%= link_to('Logout', destroy_user_session_path, method: :delete) %> 
							<% else %> 
								<%= link_to('Login', new_user_session_path) %> 
							<% end %> 
						</li> 
						<li class="nav-item-last"><div class="navbar-form" role="search">
							<%= form_tag("/products", method: "get") do %>
								<%= text_field_tag :q, nil, class: 'form-control' %>
								<%= submit_tag("Search", :class => "btn btn-default" ) %>
							<% end %>
						</div></li>
					</ul>
				</div> <!-- navbar-collapse -->
			</div> <!-- end container-fluid-->
		</nav> <!-- end navbar-->
		
		<%= flash[:notice] %>

		<%= yield %>

		<footer>
			&copy; 2017 Kelly Inc
		</footer>
	</body>
</html>