<h1>Product Details</h1> 

<p id="notice"><%= notice %></p>

<div class="media">
  <div class="media-left">
    <p> 
      <%= image_tag(@product.image_url, class: "img-responsive img-zoom media-object", data_zoom_image: @product.image_url) %>
    </p>
  </div>
  <div class="media-right">
    <p> 
      <div class="product-details"><%= @product.name %></div>
    </p> 
     
    <p> 
      <div class="product-details"><%= @product.description %></div>
    </p> 
    
    <p>
      <div class="product-details"><%= number_to_currency(@product.price, :precision => 2) %></div>
    </p>
     
    <p>
      <div class="product-details">
        <strong>Color:</strong> 
        <%= @product.color %>
      </div>
    </p>
    
    <p>
      <div class="product-details">
        Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div>
      </div>
    </p>
    
    <p>
      <%= form_with(url: '/payments/create') do |form| %> 
        <%= render partial: "shared/stripe_checkout_button" %> 
      <% end %>
    </p>
  </div>
</div>

<%= render 'new_comment' %>

<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>

<%= render 'comments' %>

<%= will_paginate @comments %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>