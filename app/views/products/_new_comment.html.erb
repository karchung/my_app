<% if signed_in? %> 
  <h4>Add a review:</h4> 
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p> 
      <%= f.label :body, "Comments" %>
      <%= f.text_area :body, class: "form-control" %> 
    </p> 
    <p> 
      <div class="rating"></div> 
    </p>
    <p> 
      <%= submit_tag "Submit", class: "btn btn-default btn-primary btn-block" %> 
    </p> 
  <% end %> 
<% end %>