<h2>Log In</h2>

<div class="form-body" id="login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label>
          <input type="checkbox"> Remember Me
        </label>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "Log In", class: "btn btn-default btn-primary btn-block" %>
    </div>
  <% end %>
</div><!-- end form-body -->

<%= render "devise/shared/links" %>
