<h2>Log In</h2>

<div class="form-body" id="login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= label_tag :email, "Email" %>
      <%= email_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", :required => true %>
    </div>
  
    <div class="form-group">
      <%= label_tag :password, "Password" %>
      <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter Password", :required => true %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= submit_tag "Log In", class: "btn btn-default btn-primary btn-block" %>
    </div>
  <% end %>
</div><!-- end form-body -->

<%= render "devise/shared/links" %>
