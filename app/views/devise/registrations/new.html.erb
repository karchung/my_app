<h2>Registration</h2>

<div class="form-body" id="registration">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="form-group">
      <%= label_tag :email, "Email" %>
      <%= email_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", :required => true %>
    </div>
  
    <div class="form-group">
      <%= label_tag :password, "Password" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter Password", :required => true %>
    </div>
  
    <div class="form-group">
      <%= label_tag :password_confirmation, "Password Confirmation" %>
      <%= password_field_tag :password_confirmation, nil, class: "form-control", placeholder: "Confirm Password", :required => true %>
    </div>
  
    <div class="actions">
      <%= submit_tag "Submit", class: "btn btn-default btn-primary btn-block" %>
    </div>
  <% end %>
</div><!-- end form-body -->

<%= render "devise/shared/links" %>